<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/viewBackground"
    app:cardCornerRadius="8dp"
    android:layout_margin="5dp"
    android:clickable="true"
    app:cardElevation="4dp"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/todo_tag"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/import_tag"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-20dp">

            <TextView
                android:id="@+id/todo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的待办"
                android:textColor="@color/Grey900"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/todo_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:textColor="@color/Grey900"
                android:text="2022-01-18"/>

            <ImageView
                android:id="@+id/todo_sandian"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/sandian"
                android:foreground="?attr/selectableItemBackground"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

            <View
                android:id="@+id/todo_split"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/Grey400"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"/>

            <TextView
                android:id="@+id/todo_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/Grey700"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:maxLines="3"
                android:ellipsize="end"
                android:minHeight="80dp"
                android:text="都发大水范德萨就反对撒地方都是法尔快捷"/>

        <ImageView
            android:id="@+id/iv_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-50dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_done"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>